doctype html
html
  head
    link(rel="shortcut icon" type="image/png" href="/images/icons/favicon.png")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    style.
      .sheet {
        margin: 0;
        width: 100%; 
        height: 297mm;
      }

      body{
        width: 100%; 
        margin: 0;
        padding: 0px ;
        background: #ffffff;
        font-family: sans-serif;
        font-size:12px;
        color:#222
      }
      *, *:before, *:after {
        box-sizing: inherit;
        color:#222
      }

      .clearfix {
        display: block; }
      .left{
        float:left;
      }
      .right{
        float:right;
      }
      .top-area {    
        display: block;
        width:100%;
        
      }
      alignRight :{
        text-align: right !important;
      }
      alignLeft :{
        text-align: left;
      }
      .logo {
        width: 150px;
      }
      .company-info{
        text-align: right;
        font-size:12px;
      }
      h1.query{
        font-size:32px;
        color:#52008c;
        margin-top:0;
      }
      p.strong{
        font-weight:700;
      }
      .billTo p {
        text-align: right !important;
        float:right;
        display:block;
        font-size:12px;
        width:100%;
        margin-top:0;
        margin-bottom:10px;
        
      }

      .tableHeader{
        color:#52008c;
      }
      .clearfix {
        display: block; }
      .col {
        float:left;
      }
      .col-1 {
        width: 4.16667%; }

      .col-2 {
        width: 8.33333%; }

      .col-3 {
        width: 12.5%; }

      .col-4 {
        width: 16.66667%; }

      .col-5 {
        width: 20.83333%; }

      .col-6 {
        width: 25%; }

      .col-7 {
        width: 29.16667%; }

      .col-8 {
        width: 33.33333%; }

      .col-9 {
        width: 37.5%; }

      .col-10 {
        width: 41.66667%; }

      .col-11 {
        width: 45.83333%; }

      .col-12 {
        width: 50%; }

      .col-13 {
        width: 54.16667%; }

      .col-14 {
        width: 58.33333%; }

      .col-15 {
        width: 62.5%; }

      .col-16 {
        width: 66.66667%; }

      .col-17 {
        width: 70.83333%; }

      .col-18 {
        width: 75%; }

      .col-19 {
        width: 79.16667%; }

      .col-20 {
        width: 83.33333%; }

      .col-21 {
        width: 87.5%; }

      .col-22 {
        width: 91.66667%; }

      .col-23 {
        width: 95.83333%; }

      .col-24 {
        width: 100%; }
      .space {
        margin-top: 30px;
        margin-bottom: 40px;
        width:100%;
      }
      .top-area .number-query > h1 {
        font-weight: 500;
      }
      .about-query {
        padding: 0px 15px;
        margin-top: 10px;
        font-size: 13px;
      }
      .project-query {
        float: left;
        margin-bottom: 10px;
      }
      .project-query span {
        color: #5d6975;
        text-align: right;
        width: 52px;
        margin-right: 10px;
        display: inline-block;
        font-size: 0.8em;
      }
      .company-query {
        float: right;
        text-align: right;
        margin-bottom: 60px;
      }
      .project-query div, .company-query div {
        white-space: nowrap;
        margin: 5px auto;
      }
      .table-query {
        width: 100%;
        border-collapse: collapse;
        border-spacing: 0;
        margin-bottom: 20px;
      }
      .table-query tr:nth-child(2n-1) td {
        background: #fcfeff;
      }
      .table-query th, .table-query td {
        text-align: center;
      }
      .table-query th {
        padding: 8px 10px;
        border-bottom: 1px solid #c2e0f2;
        color:#52008c;
        white-space: nowrap;
        font-weight: 700;
        font-size: 12px;
        text-align: right;
      }
      tbody{
        border-bottom: 1px solid #c2e0f2;
      }
      .table-query .service, .table-query .desc {
        text-align: left;
      }
      .table-query td {
        padding: 10px ;
        text-align: right;
        font-size: 11px;
      }
      .table-query td.service, .table-query td.desc {
        vertical-align: top;
      }
      .table-query td.unit, .table-query td.qty, .table-query td.total {
        
      }
      .table-query td.grand {
        border-top: 1px solid #5d6975;
      }
      .service span{
        display:block;
        clear:both;
        width : 100%;
        color:#666;
        margin-top:5px;
        font-size:10px;
      }
      .notice-query {
        padding: 15px;
      }
      .notice-query .notice {
        color: #5d6975;
        
      }
      .footer-query {
        margin-top:30px
        color: #5d6975;
        width: 100%;
        position: absolute;
        bottom: 0;
        
        padding: 20px 0;
        text-align: center;
      }
 
  body
    
      header.clearfix
        .top-area
          img.logo.left(src=settings.public_server_file+settings.company_logo)
          .right.company-info
              p.strong #{settings.company_name}
              p #{settings.company_address}
              p #{settings.company_reg_number}
              
        .col.col-24
          .space  
        .left.col-14
            h1.query
              | Query
            div 
              .col.col-7
                p.strong Description :
                p #{model.description}
              .col.col-9
                p.strong Status :
                p #{model.status}
              .col.col-8 
                p.strong Resolution :
                p #{model.resolution}
              
        .right.col-10
            .billTo
                p Client :
                p #{model.customer.name}
                p #{model.customer.address}
                p #{model.customer.phone}
                p #{model.customer.email}
        .col.col-24
          .space  
      main
        table.table-query
          thead
            tr.tableHeader
              th.service Notes
              th Date
          tbody
            each note in model.notes
              tr
                td.service #{note.content}
                td #{moment(note.date).format(dateFormat)}
        
      .col.col-24
          .space     
      footer.footer-query
        p Generated by Idurar ERP/CRM